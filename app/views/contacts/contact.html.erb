<%= stylesheet_link_tag 'contact' %>

<div class="form_page">
  <div class="container">
    <h2>お問い合わせ</h2>
    <%= form_with url: contacts_path , method: :post, local: true do |f| %>
      <table class="FormTable">
        <tbody>
          <tr>
            <td class="cp_iptxt">
              <%= f.text_field :user_name, class: "form-control iptxt", type:"text", placeholder:"お名前※" %>
              <i class="fa fa-user fa-lg fa-fw" aria-hidden="true"></i>
            </td>
          </tr>
          <tr>
            <td class="cp_iptxt">
              <%= f.text_field :ruby, class: "form-control iptxt", type:"text", placeholder:"フリガナ(全角カタカナ)※" %>
              <i class="fas fa-pen fa-lg fa-fw" aria-hidden="true"></i>
            </td>
          </tr>
          <tr>
            <td class="cp_iptxt">
              <%= f.text_field :company_name, class: "form-control iptxt", type:"text", placeholder:"企業名" %>
              <i class="fas fa-building fa-lg fa-fw" aria-hidden="true"></i>
            </td>
          </tr>
          <tr>
            <td class="cp_iptxt">
              <%= f.text_field :email, class: "form-control iptxt", type:"text", placeholder:"e-mail※" %>
              <i class="fa fa-envelope fa-lg fa-fw" aria-hidden="true"></i>
            </td>
          </tr>
          <tr>
            <td class="cp_iptxt">
              <%= f.text_field :tel, class: "form-control iptxt", type:"text", placeholder:"TEL(ハイフンなし)※" %>
              <i class="fas fa-phone fa-lg fa-fw" aria-hidden="true"></i>
            </td>
          </tr>
          <tr>
            <td class="cp_iptxt">
              <%= f.text_area :contents, class: "form-control iptxt", placeholder:"内容※" %>
              <i class="fas fa-comments fa-lg fa-fw" aria-hidden="true"></i>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="buttons-coll">
        <%= f.submit "送信", class: "custom-btn"%>
      </div>
    <% end %>
  </div>
</div>
