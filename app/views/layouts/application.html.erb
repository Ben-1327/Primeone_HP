<!DOCTYPE html>
<html>
  <head>
    <title>PrimeoneHp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA6oI97dPNTskpK8GG5eU-T9ijOmLNAKG4&callback=initMap" async defer></script>
  </head>

  <body>
    <div class="wrapper">
      <header class="navbar">
        <div class="container">
          <nav class="logo_space">
            <%= link_to root_path do %>
              <%= image_tag "logo_01.png", :width => "270", :height => "50" %>
            <% end %>
          </nav>
          <nav class="nav">
            <ul class="nav p-4">
              <li class="nav-item mr-3"><%= link_to "Home", root_path, class: "btn btn-nav" %></li>
              <li class="nav-item mr-3"><%= link_to "About", about_path, class: "btn btn-nav" %></li>
              <li class="nav-item mr-3"><%= link_to "Contact", contact_path, class: "btn btn-nav" %></li>
              <li class="nav-item"><%= link_to "Performance", performance_path, class: "btn btn-nav" %></li>
            </ul>
          </nav>
        </div>
      </header>
      <div class="main">
        <%= yield %>
      </div>
      <footer>
        <div class="container">
          <div class="row">
            <div class="col-3 logo_space">
              <%= link_to root_path do %>
                <%= image_tag "logo_01.png", :width => "270", :height => "50" %>
              <% end %>
            </div>
            <div class="col-3"></div>
            <div class="col-6 navbar">
              <nav class="nav">
                <ul class="nav p-4">
                  <li class="nav-item mr-3"><%= link_to "Home", root_path, class: "btn btn-nav" %></li>
                  <li class="nav-item mr-3"><%= link_to "About", about_path, class: "btn btn-nav" %></li>
                  <li class="nav-item mr-3"><%= link_to "Contact", contact_path, class: "btn btn-nav" %></li>
                  <li class="nav-item"><%= link_to "Performance", performance_path, class: "btn btn-nav" %></li>
                </ul>
              </nav>
            </div>
          </div>
          <div class="copyright">
            <p>Copyright©2020-2020 株式会社プライムワン All Rights Reserved.</p>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
